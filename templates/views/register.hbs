<form class="px-4 py-3" action="register" method="post">
  <div class="mb-3">
    <b>Full name:</b> <input type="name"
      class="form-control" placeholder="NAME" name="name">
  </div>
  <div class="mb-3">
    <b>Email address :</b>
    <input type="email" class="form-control"
      placeholder="email@example.com" name="email">
  </div>
  <div class="mb-3">
    <b>Phone Number:</b>
    <input type="phone number" class="form-control"
      placeholder="number" name="phone">
  </div>
  <div class="mb-3">
    <b> Whatsapp Number: </b>
    <input type="phone number" class="form-control"
      placeholder="number" name="whatsapp"><br><br>
    <button type="submit" class="btn btn-primary">Sign
      in</button>
  </form>